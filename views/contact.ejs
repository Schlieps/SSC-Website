<% include ./partials/header %>

        <div class="container-fluid">
          <div class="row full-page-no-pm contact-banner text-center d-flex align-items-center justify-content-center">
            <div class="col max-width">
              <!--	title row-->
              <div class="row m-match">
                <div class="col-12 mx-auto text-center">
                  <h1 class="title1 my-4">Contact Us</h1>
                </div>
              </div>
              <!--end of title row-->
              <div class="row m-match">
                <div class="col-12 mx-auto">
                    <h1 style="max-width:580px; margin:0 auto;" class="title4 text-left">We would love to hear from you! If you have any feedback or a question about the foundation, please let us know. We will get back to you as quickly as possible.</h1>
                    <h1 style="max-width:580px; margin:0 auto;" class="title4 text-left my-4">Please fill out this form:</h1>
                      <form id="contact-form" style="max-width:580px; margin:0 auto;" action="/contact" method="post">
                        <div class="form-group my-3">
                          <input style="max-width:290px;" class="form-control input-style" name="nameFirst" type="text" placeholder="First Name" required>
                        </div>
                        <div class="form-group my-3">
                                <input style="max-width:290px;" class="form-control input-style" name="nameLast" type="text" placeholder="Last Name" required>
                              </div>
                        <div class="form-group my-3">
                          <input style="max-width:290px;" class="form-control input-style" name="mail" type="text" placeholder="Email" required>
                        </div>
                        <div class="form-group my-3">
                          <input style="max-width:290px;" class="form-control input-style" name="number" type="text" placeholder="Phone Number" required>
                        </div>
                        <div class="form-group my-3">
                          <textarea class="form-control input-style" name="message" type="text" placeholder="Message" rows="3" required></textarea>
                        </div>
                        <div class="form-group text-center">
                          <button type="submit" class="btn nounderline mt-5 contact-btn title4" name="submit">SEND MAIL</button>
                        </div>
                      </form>
                </div>
              </div>
          </div>
          </div>
        </div>

<% include ./partials/footer %>